alias "QuicksaveSelaco" "netevent quicksaveselaco"
alias switchGadget "netevent switchGadget"
alias printObjectives "netevent show_objectives"
alias "Toggle_Flashlight" "netevent Toggle_Flashlight"
alias "Place_Marker"   "netevent Place_Marker"
alias codex "netevent OpenCodex"
alias lastWeapon "netevent LastWeapon"
alias useability "netevent UseAbility"
alias nextAbility "netevent NextAbility"
alias previousAbility "netevent PrevAbility"
